<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <!-- User avatar -->
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <!-- Stats -->
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %> <!-- @users refers to the following/followers -->
        <div class='user_avatars'>
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 25), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <!-- List of users -->
  <!-- linked to the Users controllers, will paginate -->
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>